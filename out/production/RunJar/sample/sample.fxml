<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="TOP_LEFT" hgap="10" stylesheets="/sample/sample.css" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.SampleController">
    <Label fx:id="lblJarFileLocation" text="Local FDT.jar file path" GridPane.rowIndex="4" />
    <TextField fx:id="jarFileLocation" prefHeight="25.0" prefWidth="122.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label fx:id="lblserverIpAddress" text="Remote Server IP" GridPane.rowIndex="5" />
    <TextField fx:id="serverIpAddress" prefHeight="25.0" prefWidth="30.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label fx:id="lblSourceFile" text="File to be transferred" GridPane.rowIndex="6" />
    <TextField fx:id="sourceFileLocation" prefHeight="25.0" prefWidth="281.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <Label fx:id="lblDestinationFile" text="Remote Destination folder" GridPane.rowIndex="7" />
    <TextField fx:id="destinationDirectory" GridPane.columnIndex="1" GridPane.rowIndex="7" />

    <Label fx:id="lblParameter" text=" Parallel Thread Count" GridPane.rowIndex="8" />
    <TextField fx:id="passThroughParameter" text="4" GridPane.columnIndex="1" GridPane.rowIndex="8" />

    <Button onAction="#sayHelloWorld" text="Start File Transfer" GridPane.columnSpan="4" GridPane.rowIndex="9" />
    <TextArea fx:id="fileTransferCompleted" GridPane.columnSpan="4" GridPane.rowIndex="10" />

    <Label fx:id="lblFDTFileTransfer" text="Basic FDT GUI Transfer Tool" GridPane.columnSpan="4" GridPane.rowIndex="0" />
   <Button mnemonicParsing="false" onAction="#sayUploadFile" text="Browse" GridPane.columnIndex="2" GridPane.rowIndex="6" />
   <Separator prefWidth="200.0" valignment="TOP" GridPane.columnSpan="4" GridPane.rowIndex="3" />
   <Label text="(Created by Sriram &amp; Murugappan) " GridPane.columnSpan="4" GridPane.rowIndex="1" />
   <Hyperlink text="Source Code -  https://github.com/sri50183309/FDTRepository" GridPane.columnSpan="4" GridPane.rowIndex="2" />
    <Label textOverrun="WORD_ELLIPSIS" GridPane.columnSpan="4" GridPane.rowIndex="11" wrapText="true">
        FDT is an Application for Efficient Data Transfers which is capable of reading and writing at
        disk speed over wide area networks(with Standarad TCP)
        (https://fast-data-transfer.github.io/)
    </Label>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints maxWidth="0.0" minWidth="0.0" prefWidth="0.0" />
      <ColumnConstraints maxWidth="0.0" minWidth="0.0" prefWidth="0.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
